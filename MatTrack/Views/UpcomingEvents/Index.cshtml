@model IEnumerable<MatTrack.Models.UpcomingEvents>

@{
    ViewData["Title"] = "Upcoming Events";
}

<h1>Upcoming Events</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventSummary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventSummary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UpcomingEventsID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UpcomingEventsID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UpcomingEventsID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
